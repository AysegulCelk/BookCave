@model AuthorViewModel

<ul class="product-categories">
    @for (int i = 0; i < Model.AuthorSelects.Count; i++) //FOREACH CALISMIYOR
    {
        <li class="custom-checkbox pb-2">
            <input type="checkbox" asp-for="AuthorSelects[i].IsSelected" id="@Model.AuthorSelects[i].AuthorId" />
            <label for="@Model.AuthorSelects[i].AuthorId" class="d-inline-block ml-1">@Model.AuthorSelects[i].AuthorName</label>

            <input type="hidden" asp-for="AuthorSelects[i].AuthorId" />
            <input type="hidden" asp-for="AuthorSelects[i].AuthorName" />
        </li>
    }
</ul>